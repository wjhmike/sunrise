<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="goldsquadron.sunrise.alarmActivity">

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_alignBaseline="@+id/setButton"
        android:layout_alignBottom="@+id/setButton"
        android:layout_toEndOf="@+id/alarmText"
        android:text="cancel"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/sleepText"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/slTimePicker"
        android:layout_alignStart="@+id/getUpText"
        android:layout_marginBottom="34dp"
        android:editable="false"
        android:text="Sleep:"
        android:textSize="36sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/alarmText"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:autoText="true"
        android:editable="false"
        android:text="Alarm"
        android:textSize="30sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/getUpText"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/guTimePicker"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="35dp"
        android:layout_marginStart="16dp"
        android:editable="false"
        android:text="GetUp:"
        android:textSize="36sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/setButton"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="47dp"
        android:layout_toStartOf="@+id/slTimePicker"
        android:text="Set"
        android:textSize="24sp" />

    <TimePicker
        android:id="@+id/guTimePicker"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/alarmText"
        android:layout_marginTop="30dp"
        android:timePickerMode="spinner" />

    <TimePicker
        android:id="@+id/slTimePicker"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/getUpText"
        android:layout_marginTop="26dp"
        android:timePickerMode="spinner" />


</RelativeLayout>
