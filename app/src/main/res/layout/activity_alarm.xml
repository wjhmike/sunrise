<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="goldsquadron.sunrise.alarmActivity">

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/setButton"
        android:layout_marginStart="21dp"
        android:layout_toEndOf="@+id/alarmText"
        android:text="cancel"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/sleepText"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/slTimePicker"
        android:layout_alignEnd="@+id/setButton"
        android:layout_marginBottom="56dp"
        android:layout_marginEnd="45dp"
        android:editable="false"
        android:text="Sleep:"
        android:textSize="36sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/alarmText"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:autoText="true"
        android:editable="false"
        android:text="Alarm"
        android:textSize="36sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/getUpText"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/guTimePicker"
        android:layout_alignStart="@+id/sleepText"
        android:layout_marginBottom="65dp"
        android:editable="false"
        android:text="GetUp:"
        android:textSize="36sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/setButton"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="110dp"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@+id/alarmText"
        android:text="Set"
        android:textSize="30sp" />

    <TimePicker
        android:id="@+id/guTimePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/cancelButton"
        android:layout_below="@+id/alarmText"
        android:layout_marginTop="38dp"
        android:timePickerMode="spinner" />

    <TimePicker
        android:id="@+id/slTimePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/guTimePicker"
        android:layout_below="@+id/getUpText"
        android:layout_marginTop="31dp"
        android:timePickerMode="spinner" />


</RelativeLayout>
